<Window x:Class="HomeWork_Focus_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_Focus_Timer"
        mc:Ignorable="d"
        Title="Focus Timer" Height="480" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Focus Timer"
               FontSize="50"
               FontWeight="Bold"
               Grid.Column="1" Grid.Row="1"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <TextBlock x:Name="TextTimer"
                 Text="00:00"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Grid.Column="1" Grid.Row="2"
                 Grid.ColumnSpan="2"
                 FontSize="60"
                 FontWeight="Bold"/>
        <Button x:Name="start"
                Content="Старт"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Grid.Column="1" Grid.Row="3"
                Width="130" Height="50"
                FontSize="20" Click="start_Click"/>
        <Button x:Name="reset"
                Grid.Column="2" Grid.Row="3"
                Width="130" Height="50"
                FontSize="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Сброс" Margin="50,0,0,0" Click="reset_Click"/>
        <ComboBox x:Name="choiceOfTime"
                  Grid.Column="2" Grid.Row="4"
                  Width="100" Height="30"
                  HorizontalAlignment="Left"/>
        <Label Content="Продолжительность: "
               Grid.Row="4" Grid.Column="1"
               FontSize="18"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"/>
        <Label Content="мин."
               VerticalAlignment="Center"
               Grid.Column="2"
               Grid.Row="4"
               Margin="100, 5, 0, 0"
               FontSize="18"/>
    </Grid>
</Window>
